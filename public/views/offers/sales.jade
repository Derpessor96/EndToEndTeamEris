div.user-offers
    h1.text-center Sales from {{user.firstName + ' ' + user.lastName}}
    div.filter-control
        div.row
            div.col-sm-1
                label.control-label Sort
            div.col-sm-3
                select.form-control(ng-model="orderBy")
                        option(value="" selected="selected") None
                        option(value="price") Price
                        option(value="creationDate") Creation Date
                        option(value="title") Title
            div.col-sm-1
                label.control-label Ordering
            div.col-sm-3
                select.form-control(ng-model="orderType")
                        option(value="asc" selected="selected") Ascending
                        option(value="desc") Descending
        div.row.filter-control
            div.col-sm-3
                div.col-sm-3
                    button.btn.btn-primary(ng-click="previousPage()", ng-disabled="request.page == 1") &lt;&lt;
                div.col-sm-5
                    span {{page}}
                div.col-sm-3
                    button.btn.btn-primary(ng-click="nextPage()") &gt;&gt;
            div.col-sm-1.col-sm-offset-3
                button.pull-right.btn.btn-primary(ng-click="refreshSales()") Filter            
    table.table.table-bordered.ng-table.table-container
        thead
            tr
                th Title
                th Category
                th Description
                th Creation Date
                th Price
        tbody
            tr(ng-repeat="sale in userSales")
                td {{sale.title}}
                td {{categories[sale.category]}}
                td {{sale.description}}
                td {{sale.creationDate | date: 'MMM d yyyy' }}
                td {{sale.price}}