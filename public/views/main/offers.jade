div.all-offers
    h1.text-center Offers
    div(ng-if="identity.isAuthenticated()")
        div.col-sm-4
            .input.form-control(type="text", ng-model="search")
        div.col-sm-2
            button.btn.btn-default Filter
    table.table.table-bordered.ng-table.table-container
        thead
            tr
                th Title
                th Category
                th Description
                th Creation Date
                th Price
                th Available
        tbody
            tr( ng-repeat="offer in allOffers | filter:search")
                td 
                    a (href="#/offers/{{offer.id}}")
                        | {{offer.title}}
                td {{offer.category}}
                td {{offer.description}}
                td {{offer.creationDate}}
                td {{offer.price}}
                td {{offer.sold}}